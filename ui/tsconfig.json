{
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES6",
        "jsx": "react",
        "module": "es6",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "removeComments": true,
        "noImplicitReturns": true,
        "strict": true,
        "outDir": "dist",
        "lib": ["es6", "es7", "dom"],
        "baseUrl": "src",
        "paths": {
            "app/*": ["./app/*"]
        }
    },
    "exclude": ["dist", "node_modules"]
}