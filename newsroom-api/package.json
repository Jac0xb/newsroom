{
  "name": "newsroom-api",
  "version": "0.0.1",
  "description": "Newsroom Document API",
  "main": "src/index.ts",
  "scripts": {
    "build": "tslint -c tslint.json -p tsconfig.json --fix && swaggerGen -c swagger.config.json",
    "prestart": "yarn build",
    "start": "ts-node .",
    "start:watch": "nodemon -e ts --watch src --exec 'yarn start'",
    "test": "jest --runInBand",
    "typeorm": "tsc && ts-node node_modules/typeorm/cli.js",
    "buildDB": "yarn typeorm schema:sync && yarn typeorm migration:run",
    "buildstart": "yarn run build && yarn typeorm schema:sync && yarn typeorm migration:run && ts-node ."
  },
  "repository": {
    "type": "git",
    "url": "https://capstone-cs.eng.utah.edu/Newsroom/newsroom"
  },
  "keywords": [
    "newsroom",
    "documents",
    "workflows"
  ],
  "author": "Newsroom",
  "license": "UNLICENSED",
  "dependencies": {
    "@slack/web-api": "^5.2.0",
    "@types/supertest": "^2.0.8",
    "Blob": "^0.10.0",
    "blob": "0.0.5",
    "chai": "^4.2.0",
    "cookie-session": "^1.3.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-session": "^1.16.2",
    "googleapis": "^43.0.0",
    "guid-typescript": "^1.0.9",
    "nyc": "^14.1.1",
    "open": "^7.0.0",
    "passport": "^0.4.0",
    "passport-google-oauth": "^2.0.0",
    "reflect-metadata": "^0.1.12",
    "swagger-ui-express": "^4.0.2",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.15",
    "typeorm-typedi-extensions": "^0.2.3",
    "typescript-rest": "^2.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.2",
    "@types/cookie-session": "^2.0.37",
    "@types/dotenv": "^6.1.1",
    "@types/expect": "^1.20.4",
    "@types/express": "^4.16.1",
    "@types/express-session": "^1.15.14",
    "@types/jest": "^24.0.18",
    "@types/node": "^11.13.0",
    "@types/passport-google-oauth": "^1.0.41",
    "@types/swagger-ui-express": "^3.0.0",
    "jest": "^24.9.0",
    "nodemon": "^1.18.11",
    "sqlite3": "^4.0.6",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.15.0",
    "typescript": "^3.6.3",
    "typescript-rest-swagger": "^0.0.24"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node"
  }
}
